<%= render "shared/header" %>

<div class="new-main">
    <h2 class="items-sell-title">編集</h2>
    <%= form_with model: @book, local: true do |f| %>

    <%# 出品画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        出品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image" %>
      </div>
    </div>
    <%# /出品画像 %>
    <%# 商品名と商品説明 %>
    <div class="new-items">
      <div class="weight-bold-text">
        本の題名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"items-text", id:"item-name", placeholder:"題名（必須 40文字まで)", maxlength:"40" %>
      <div class="weight-bold-text">
        著者
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :author, class:"items-text", id:"item-name", placeholder:"著者（必須 40文字まで)", maxlength:"40" %>
      <div class="items-explain">
        <div class="weight-bold-text">
          本の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :text, class:"items-text", id:"item-info", placeholder:"レビュー（必須 1,000文字まで）" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
 
    <div class="items-detail">
      <div class="weight-bold-text">本について</div>
      <div class="form">
        <div class="weight-bold-text">
          カテゴリー
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:category_id, Category.all, :id, :name, {}, {class:"select-box", id:"item-category"}) %>
        <div class="weight-bold-text">
          読み終えた時間
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :time, class:"items-text", id:"item-name", placeholder:"時間", maxlength:"40" %>
        <div class="weight-bold-text">
          購入URL
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :url, class:"items-text", id:"item-name", placeholder:"URL", maxlength:"40" %>
        <div class="weight-bold-text">
          本の評価
          <span class="indispensable">必須</span>
        </div>
        <%= f.collection_select(:review_id, Review.all, :id, :name, {}, {class:"select-box", id:"item-sales-status"}) %>
      </div>
    </div>
    <%# /商品の詳細 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "投稿する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <%= render "shared/footer" %>