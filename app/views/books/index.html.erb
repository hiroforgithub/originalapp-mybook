<%= render "shared/header" %>

<div class="index-body">
  <div class="title">
    <h1>
    <% @bookcategory.first(1).each do |book| %> 
      Category -<%= book.category.name %>- 
    <% end %>
    </h1>
  </div>

  <div class="index-main">
    <div class="likes-ranking">
      <h2>読みたい!!ランキング</h2>
      <ul>
        <li class="ranking-li">
          <% @booklike.first(10).each do |book| %> 
          <div class="ranking-book">
            <div class="ranking-book-title">
            <%= book.title %>　
            </div>
            <div class="ranking-book-likes">
            <%= book.likes.count %> <i class="fas fa-book-open fas-color"></i>
            </div>
          </div>
          <% end %>
        </li>
      </ul>
    </div>

    <div class="index-right">
      <ul class='index-lists'>
      <% @bookcategory.each do |book| %> 
        <li class='list'>
          <%= link_to book_path(book.id), method: :get, class: "index-link"  do %>
          <div class='book-info'>
            <div class="index-img">
            <%= image_tag book.image , class: "book-img" %>
            </div>
            <div class="index-user">
            User <%= book.user.nick_name %>
            </div>
            <div class='book-title'>
            Title <%= book.title %>
            </div>
          </div>
          <% end %>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>

<%= render "shared/footer" %>